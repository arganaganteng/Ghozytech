  <script>
    // Matrix Rain Effect
    const chars = "日ﾊﾐﾋｰｳｼﾅﾓﾆｻﾜﾂｵﾘｱﾎﾃﾏｹﾒｴｶｷﾑﾕﾗｾﾈｽﾀﾇﾍ0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ";
    
    function createMatrixRain() {
      const matrixHeader = document.querySelector('.matrix-header');
      const columnCount = Math.floor(window.innerWidth / 20);
      
      for (let i = 0; i < columnCount; i++) {
        const column = document.createElement('div');
        column.className = 'matrix-column';
        column.style.left = `${i * 20}px`;
        column.style.animationDuration = `${5 + Math.random() * 10}s`;
        column.style.animationDelay = `${Math.random() * 5}s`;
        
        // Generate random characters for the column
        let content = '';
        const length = 50 + Math.floor(Math.random() * 50);
        for (let j = 0; j < length; j++) {
          content += chars[Math.floor(Math.random() * chars.length)];
        }
        
        column.textContent = content;
        matrixHeader.appendChild(column);
      }
    }

    // Random Binary Flashes
    function createBinaryFlashes() {
      const matrixHeader = document.querySelector('.matrix-header');
      setInterval(() => {
        if (Math.random() > 0.7) {
          const flash = document.createElement('div');
          flash.className = 'binary-flash';
          flash.style.left = `${Math.random() * 100}vw`;
          flash.style.top = `${Math.random() * 100}vh`;
          
          // Generate random binary
          let binary = '';
          for (let i = 0; i < 10; i++) {
            binary += Math.random() > 0.5 ? '1' : '0';
          }
          
          flash.textContent = binary;
          matrixHeader.appendChild(flash);
          
          // Remove after animation
          setTimeout(() => {
            flash.remove();
          }, 500);
        }
      }, 300);
    }

    // Loading Screen Animation - Shortened to 3 seconds
    function simulateLoading() {
      const loadingScreen = document.querySelector('.loading-screen');
      const progressBar = document.querySelector('.loading-progress-bar');
      let progress = 0;
      
      const interval = setInterval(() => {
        progress += 33; // Faster progress to reach 100% in ~3 seconds
        if (progress > 100) progress = 100;
        progressBar.style.width = `${progress}%`;
        
        if (progress >= 100) {
          clearInterval(interval);
          setTimeout(() => {
            loadingScreen.classList.add('hidden');
            setTimeout(() => {
              loadingScreen.remove();
            }, 500);
          }, 500);
        }
      }, 100); // Update every 100ms for smoother progress
    }

    // Audio Control
document.querySelector('.audio-btn').addEventListener('click', function(e) {
  e.preventDefault(); // Cegah aksi default tombol
  const audio = document.getElementById('background-audio');
  const icon = document.getElementById('audio-icon');
  
  if (audio.paused) {
    audio.play()
      .then(() => {
        icon.classList.remove('fa-volume-mute');
        icon.classList.add('fa-volume-up');
      })
      .catch(error => {
        console.log("Audio play failed:", error);
        alert("Silakan klik tombol ini lagi untuk memutar audio. Browser memerlukan interaksi pengguna terlebih dahulu.");
      });
  } else {
    audio.pause();
    icon.classList.remove('fa-volume-up');
    icon.classList.add('fa-volume-mute');
  }
});

    // Modal Functions
    function openModal(toolId) {
      const modal = document.getElementById(`${toolId}-modal`);
      modal.style.display = 'block';
      document.body.style.overflow = 'hidden';
      setTimeout(() => {
        modal.classList.add('show');
      }, 10);
    }

    function closeModal(toolId) {
      const modal = document.getElementById(`${toolId}-modal`);
      modal.classList.remove('show');
      setTimeout(() => {
        modal.style.display = 'none';
        document.body.style.overflow = 'auto';
      }, 300);
    }

    // Close modal when clicking outside
    window.onclick = function(event) {
      const modals = document.querySelectorAll('.modal');
      modals.forEach(modal => {
        if (event.target === modal) {
          modal.classList.remove('show');
          setTimeout(() => {
            modal.style.display = 'none';
            document.body.style.overflow = 'auto';
          }, 300);
        }
      });
    };

    // Scroll to section
    function scrollToSection(sectionId) {
      const section = document.getElementById(sectionId);
      if (section) {
        section.scrollIntoView({
          behavior: 'smooth'
        });
      }
    }

    // Scroll to content
    function scrollToContent() {
      document.querySelector('.content').scrollIntoView({
        behavior: 'smooth'
      });
    }

    // Toggle mobile menu
    function toggleMenu() {
      const menu = document.querySelector('.nav-menu');
      menu.classList.toggle('active');
    }

    // Initialize animations when elements are in view
    function initIntersectionObserver() {
      const sections = document.querySelectorAll('.section, img, .video-container');
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
          }
        });
      }, { threshold: 0.1 });

      sections.forEach(section => observer.observe(section));
    }

    // Smooth scroll for anchor links
    function initSmoothScroll() {
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function(e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute('href'));
          if (target) {
            target.scrollIntoView({
              behavior: 'smooth'
            });
            
            // Close mobile menu if open
            if (window.innerWidth <= 768) {
              document.querySelector('.nav-menu').classList.remove('active');
            }
          }
        });
      });
    }

    // Resize handler
    window.addEventListener('resize', () => {
      // Recreate matrix columns on resize
      document.querySelectorAll('.matrix-column').forEach(el => el.remove());
      createMatrixRain();
    });

    // Initialize everything when DOM is loaded
    document.addEventListener('DOMContentLoaded', () => {
      // Start loading animation
      simulateLoading();
      
      // Create effects
      createMatrixRain();
      createBinaryFlashes();
      
      // Initialize audio
      const audio = document.getElementById('background-audio');
      if (audio) {
        audio.volume = 0.3;
      }
      
      // Initialize other functionality
      initIntersectionObserver();
      initSmoothScroll();
      
      // Duplicate marquee content for seamless animation
      const marquees = document.querySelectorAll('.marquee');
      marquees.forEach(marquee => {
        const marqueeContent = marquee.innerHTML;
        marquee.innerHTML = marqueeContent + marqueeContent;
      });
    });

    // Additional animations for feature cards
    function animateFeatureCards() {
      const featureCards = document.querySelectorAll('.feature-card');
      
      featureCards.forEach(card => {
        card.addEventListener('mouseenter', () => {
          const icon = card.querySelector('i');
          icon.style.transform = 'scale(1.2) rotate(10deg)';
          
          const title = card.querySelector('h3');
          title.style.letterSpacing = '1px';
          
          const text = card.querySelector('p');
          text.style.color = 'var(--secondary-color)';
        });
        
        card.addEventListener('mouseleave', () => {
          const icon = card.querySelector('i');
          icon.style.transform = '';
          
          const title = card.querySelector('h3');
          title.style.letterSpacing = '';
          
          const text = card.querySelector('p');
          text.style.color = '';
        });
      });
    }

    // Start additional animations after loading
    setTimeout(() => {
      animateFeatureCards();
    }, 1000);
  </script>
