<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Eksplorasi peralatan canggih yang digunakan oleh agen lapangan FBI dan CIA untuk misi intelijen.">
  <meta name="keywords" content="FBI, CIA, intelijen, ESP32, Raspberry Pi, USB Rubber Ducky, HackRF One, cybersecurity">
  <meta name="author" content="Muhammad Ghozy Argana">
  <title>Peralatan Intelijen Lapangan FBI & CIA</title>
  <link href="https://fonts.googleapis.com/css2?family=Share+Tech+Mono&family=Roboto+Mono:wght@400;700&family=Orbitron:wght@500;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    /* RESET & BASE STYLES */
    :root {
      --primary-color: #00ff99;
      --secondary-color: #00ccff;
      --accent-color: #9933ff;
      --dark-bg: #0d0d0d;
      --darker-bg: #1a1a1a;
      --text-color: #e0e0e0;
      --matrix-color: rgba(0, 255, 153, 0.3);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html {
      scroll-behavior: smooth;
    }

    body {
      font-family: 'Roboto Mono', monospace;
      background: var(--dark-bg);
      color: var(--text-color);
      line-height: 1.8;
      overflow-x: hidden;
      position: relative;
    }

    /* MATRIX HEADER */
    .matrix-header {
      position: relative;
      width: 100%;
      height: 100vh;
      min-height: 600px;
      overflow: hidden;
      display: flex;
      align-items: center;
      justify-content: center;
      isolation: isolate;
      background: linear-gradient(135deg, var(--dark-bg) 0%, var(--darker-bg) 100%);
    }

    .matrix-column {
      position: absolute;
      display: inline-block;
      color: var(--matrix-color);
      font-size: 16px;
      writing-mode: vertical-rl;
      text-orientation: mixed;
      top: -100vh;
      animation: fall linear infinite;
      text-shadow: 0 0 5px rgba(0, 255, 153, 0.5);
      z-index: 1;
      user-select: none;
    }

    @keyframes fall {
      to {
        transform: translateY(150vh);
      }
    }

    .grid-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background:
        linear-gradient(rgba(0, 255, 153, 0.03) 1px, transparent 1px),
        linear-gradient(90deg, rgba(0, 255, 153, 0.03) 1px, transparent 1px);
      background-size: 30px 30px;
      pointer-events: none;
      z-index: 2;
    }

    .scan-line {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 4px;
      background: linear-gradient(to bottom, 
        transparent, 
        rgba(0, 255, 153, 0.5), 
        transparent);
      animation: scan 4s linear infinite;
      z-index: 3;
    }

    @keyframes scan {
      0% { top: -4px; }
      100% { top: 100vh; }
    }

    .binary-flash {
      position: absolute;
      color: rgba(0, 255, 153, 0.7);
      font-size: 12px;
      animation: flash 0.5s linear forwards;
      z-index: 4;
      user-select: none;
    }

    @keyframes flash {
      0% { opacity: 0; transform: scale(0.5); }
      50% { opacity: 1; transform: scale(1.2); }
      100% { opacity: 0; transform: scale(1.5); }
    }

    .glitch-box {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 5;
      pointer-events: none;
      opacity: 0;
      animation: glitch-appear 10s infinite;
    }

    @keyframes glitch-appear {
      0%, 95% { opacity: 0; }
      5%, 15%, 25%, 35%, 45%, 55%, 65%, 75%, 85% { 
        opacity: 0.1;
        background: 
          linear-gradient(0deg, transparent 45%, rgba(0, 255, 153, 0.3) 50%, transparent 55%),
          linear-gradient(90deg, transparent 45%, rgba(0, 255, 153, 0.3) 50%, transparent 55%);
        background-size: 20px 20px;
      }
    }

    /* HEADER CONTENT */
    .header-content {
      position: relative;
      z-index: 10;
      text-align: center;
      padding: 40px;
      max-width: 1200px;
      margin: 0 auto;
      background-color: rgba(13, 13, 13, 0.7);
      border-radius: 15px;
      border: 1px solid rgba(0, 255, 153, 0.3);
      backdrop-filter: blur(10px);
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
      transform-style: preserve-3d;
      transform: perspective(1000px);
    }

    .header-content h1 {
      font-family: 'Orbitron', sans-serif;
      font-size: clamp(2.5rem, 5vw, 4rem);
      color: var(--primary-color);
      text-transform: uppercase;
      letter-spacing: 5px;
      margin-bottom: 25px;
      text-shadow: 0 0 10px rgba(0, 255, 153, 0.7);
      animation: glow 2s ease-in-out infinite alternate;
      position: relative;
    }

    .header-content h1::after {
      content: '';
      position: absolute;
      bottom: -10px;
      left: 50%;
      transform: translateX(-50%);
      width: 100px;
      height: 3px;
      background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
    }

    .header-content p {
      font-size: clamp(1rem, 2vw, 1.5rem);
      margin-bottom: 30px;
      color: var(--secondary-color);
      max-width: 800px;
      margin-left: auto;
      margin-right: auto;
      line-height: 1.6;
    }

    /* SCROLL DOWN BUTTON */
    .scroll-down {
      position: absolute;
      bottom: 40px;
      left: 50%;
      transform: translateX(-50%);
      color: var(--primary-color);
      font-size: 2rem;
      animation: bounce 2s infinite;
      cursor: pointer;
      z-index: 10;
      background: rgba(13, 13, 13, 0.5);
      width: 50px;
      height: 50px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 50%;
      border: 1px solid var(--primary-color);
      transition: all 0.3s;
    }

    .scroll-down:hover {
      background: rgba(0, 255, 153, 0.2);
      transform: translateX(-50%) scale(1.1);
    }

    @keyframes glow {
      from { text-shadow: 0 0 5px var(--primary-color), 0 0 10px var(--secondary-color); }
      to { text-shadow: 0 0 10px var(--primary-color), 0 0 20px var(--accent-color), 0 0 30px var(--secondary-color); }
    }

    @keyframes bounce {
      0%, 20%, 50%, 80%, 100% { transform: translateY(0) translateX(-50%); }
      40% { transform: translateY(-20px) translateX(-50%); }
      60% { transform: translateY(-10px) translateX(-50%); }
    }

    /* MARQUEE SECTION */
    .marquee-section {
      position: relative;
      z-index: 15;
      margin-top: -5px;
    }

    .marquee-container {
      background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
      padding: 15px 0;
      overflow: hidden;
      position: relative;
    }

    .marquee-container.secondary {
      background: linear-gradient(90deg, var(--accent-color), #ff3399);
      margin-top: 5px;
    }

    .marquee {
      display: flex;
      width: 100%;
      white-space: nowrap;
      animation: scroll 20s linear infinite;
    }

    .marquee span {
      display: inline-block;
      padding: 0 50px;
      color: #111;
      font-weight: bold;
      font-size: 1.1rem;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    @keyframes scroll {
      0% { transform: translateX(0); }
      100% { transform: translateX(-50%); }
    }

    /* NAVIGATION */
    nav {
      background: rgba(26, 26, 26, 0.95);
      padding: 15px;
      position: sticky;
      top: 0;
      z-index: 1000;
      backdrop-filter: blur(10px);
      border-bottom: 1px solid var(--primary-color);
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
    }

    .nav-container {
      max-width: 1400px;
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
      position: relative;
    }

    .logo {
      font-family: 'Orbitron', sans-serif;
      font-weight: bold;
      color: var(--primary-color);
      font-size: 1.8rem;
      display: flex;
      align-items: center;
      text-decoration: none;
      transition: all 0.3s;
    }

    .logo i {
      margin-right: 12px;
      color: var(--secondary-color);
      font-size: 1.5rem;
    }

    .logo:hover {
      text-shadow: 0 0 10px var(--primary-color);
    }

    .hamburger {
      display: none;
      font-size: 1.8rem;
      color: var(--secondary-color);
      cursor: pointer;
      padding: 8px;
      transition: all 0.3s;
      z-index: 1001;
    }

    .hamburger:hover {
      color: var(--primary-color);
      transform: rotate(90deg);
    }

    .nav-menu {
      display: flex;
      gap: 25px;
      transition: all 0.5s ease;
    }

    .nav-menu a {
      color: var(--secondary-color);
      text-decoration: none;
      font-weight: bold;
      font-size: 1.1rem;
      padding: 10px 18px;
      border-radius: 5px;
      transition: all 0.3s;
      display: flex;
      align-items: center;
      position: relative;
      overflow: hidden;
    }

    .nav-menu a::before {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 0;
      height: 2px;
      background: var(--primary-color);
      transition: width 0.3s;
    }

    .nav-menu a:hover::before {
      width: 100%;
    }

    .nav-menu a i {
      margin-right: 10px;
      font-size: 1.2rem;
    }

    .nav-menu a:hover {
      color: var(--primary-color);
      transform: translateY(-3px);
    }

    /*/* AUDIO CONTROL - IMPROVED POSITIONING */
.audio-control-container {
  position: fixed;
  bottom: 30px; /* Disesuaikan untuk posisi lebih baik */
  left: 15px; /* Disesuaikan untuk lebih dekat ke tepi */
  z-index: 1000;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10px;
}

.audio-control {
  background: rgba(26, 26, 26, 0.9);
  border-radius: 50%;
  width: 60px;
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
  border: 2px solid var(--primary-color);
  transition: all 0.3s;
  cursor: pointer;
  position: relative;
  touch-action: manipulation;
}

.audio-control:hover {
  box-shadow: 0 0 25px var(--primary-color);
  background: rgba(26, 26, 26, 1);
}

.audio-control:active {
  transform: scale(0.95);
  box-shadow: 0 0 10px var(--primary-color);
}

.audio-btn {
  background: none;
  border: none;
  color: var(--secondary-color);
  font-size: 1.8rem;
  cursor: pointer;
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
}

.audio-btn:hover {
  color: var(--primary-color);
}

.audio-label {
  color: var(--primary-color);
  font-size: 0.9rem;
  font-weight: bold;
  text-transform: uppercase;
  letter-spacing: 1px;
  background: rgba(26, 26, 26, 0.7);
  padding: 5px 10px;
  border-radius: 20px;
  border: 1px solid var(--primary-color);
  opacity: 0;
  transition: opacity 0.3s;
  pointer-events: none;
  position: relative;
  top: 10px;
}

.audio-control:hover .audio-label {
  opacity: 1;
}

    /* MAIN CONTENT */
    .content {
      max-width: 1400px;
      margin: 50px auto;
      padding: 0 30px;
      position: relative;
    }

    /* SECTION STYLES */
    .section {
      margin-bottom: 100px;
      opacity: 0;
      transform: translateY(50px);
      transition: opacity 0.8s ease, transform 0.8s ease;
      position: relative;
    }

    .section.visible {
      opacity: 1;
      transform: translateY(0);
    }

    .section h2 {
      font-family: 'Orbitron', sans-serif;
      font-size: clamp(1.8rem, 3vw, 2.8rem);
      color: var(--secondary-color);
      margin-bottom: 40px;
      position: relative;
      padding-bottom: 20px;
      text-transform: uppercase;
      letter-spacing: 2px;
    }

    .section h2::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 150px;
      height: 4px;
      background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
      border-radius: 2px;
    }

    .section p {
      margin-bottom: 20px;
      font-size: 1.1rem;
      line-height: 1.7;
    }

    /* TOOL GRID */
    .tool-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 40px;
      margin-top: 40px;
    }

    .tool-card {
      background: rgba(26, 26, 26, 0.7);
      padding: 30px;
      border-radius: 15px;
      border: 1px solid var(--secondary-color);
      transition: all 0.4s;
      backdrop-filter: blur(5px);
      position: relative;
      overflow: hidden;
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
      cursor: pointer;
    }

    .tool-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 5px;
      background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
    }

    .tool-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 20px 40px rgba(0, 204, 255, 0.3);
      border-color: var(--primary-color);
    }

    .tool-card img {
      width: 100%;
      height: 250px;
      object-fit: contain;
      border-radius: 10px;
      margin-bottom: 25px;
      border: 1px solid var(--secondary-color);
      transition: all 0.4s;
      background-color: var(--dark-bg);
      padding: 15px;
    }

    .tool-card:hover img {
      border-color: var(--primary-color);
      transform: scale(1.05);
    }

    .tool-card h3 {
      color: var(--primary-color);
      margin-bottom: 20px;
      font-size: 1.8rem;
      font-family: 'Orbitron', sans-serif;
      position: relative;
      padding-bottom: 10px;
    }

    .tool-card h3::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 50px;
      height: 2px;
      background: var(--secondary-color);
    }

    .tool-card p {
      margin-bottom: 20px;
      font-size: 1.05rem;
    }

    .price-tag {
      display: inline-block;
      background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
      color: #111;
      padding: 8px 20px;
      border-radius: 25px;
      font-weight: bold;
      margin-top: 15px;
      font-size: 1rem;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

    /* MODAL STYLES */
    .modal {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.9);
      backdrop-filter: blur(5px);
      z-index: 2000;
      overflow-y: auto;
      opacity: 0;
      transition: opacity 0.3s;
    }

    .modal.show {
      opacity: 1;
    }

    .modal-content {
      background: linear-gradient(135deg, var(--darker-bg) 0%, var(--dark-bg) 100%);
      margin: 5% auto;
      padding: 40px;
      border: 1px solid var(--secondary-color);
      border-radius: 15px;
      width: 85%;
      max-width: 1000px;
      position: relative;
      box-shadow: 0 0 40px rgba(0, 204, 255, 0.3);
      transform: scale(0.9);
      transition: transform 0.3s;
    }

    .modal.show .modal-content {
      transform: scale(1);
    }

    .close-modal {
      position: absolute;
      top: 20px;
      right: 25px;
      color: var(--primary-color);
      font-size: 2.5rem;
      font-weight: bold;
      cursor: pointer;
      transition: all 0.3s;
      background: rgba(26, 26, 26, 0.7);
      width: 50px;
      height: 50px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 50%;
      border: 1px solid var(--primary-color);
    }

    .close-modal:hover {
      color: #ff3366;
      transform: rotate(90deg);
      background: rgba(255, 51, 102, 0.1);
    }

    .modal-body {
      display: flex;
      flex-direction: column;
      gap: 30px;
    }

    .modal-image {
      width: 100%;
      max-height: 500px;
      object-fit: contain;
      border-radius: 10px;
      border: 1px solid var(--secondary-color);
      margin-bottom: 30px;
      background-color: var(--dark-bg);
      padding: 20px;
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
    }

    .modal-details {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 40px;
    }

    .modal-features, .modal-specs {
      background: rgba(26, 26, 26, 0.7);
      padding: 25px;
      border-radius: 10px;
      border: 1px solid var(--accent-color);
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

    .modal-features h3, .modal-specs h3 {
      color: var(--primary-color);
      margin-bottom: 20px;
      font-family: 'Orbitron', sans-serif;
      border-bottom: 1px solid var(--secondary-color);
      padding-bottom: 10px;
      font-size: 1.5rem;
    }

    .modal-features ul, .modal-specs ul {
      padding-left: 25px;
    }

    .modal-features li, .modal-specs li {
      margin-bottom: 12px;
      line-height: 1.6;
      position: relative;
    }

    .modal-features li::before, .modal-specs li::before {
      content: '▹';
      position: absolute;
      left: -20px;
      color: var(--primary-color);
    }

    /* FEATURES GRID - IMPROVED INTERACTIVITY */
    .features-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 40px;
      margin: 50px 0;
    }

    .feature-card {
      background: rgba(26, 26, 26, 0.7);
      padding: 30px;
      border-radius: 15px;
      border: 1px solid var(--accent-color);
      transition: all 0.4s;
      backdrop-filter: blur(5px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
      position: relative;
      overflow: hidden;
      cursor: pointer;
    }

    .feature-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 5px;
      background: linear-gradient(90deg, var(--accent-color), #ff3399);
      transform: scaleX(0);
      transform-origin: left;
      transition: transform 0.3s ease;
    }

    .feature-card:hover::before {
      transform: scaleX(1);
    }

    .feature-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 20px 40px rgba(153, 51, 255, 0.3);
    }

    .feature-card i {
      font-size: 3rem;
      color: var(--secondary-color);
      margin-bottom: 20px;
      transition: all 0.3s;
    }

    .feature-card:hover i {
      color: var(--primary-color);
      transform: scale(1.2) rotate(10deg);
    }

    .feature-card h3 {
      color: var(--primary-color);
      margin-bottom: 20px;
      font-size: 1.5rem;
      font-family: 'Orbitron', sans-serif;
      transition: all 0.3s;
    }

    .feature-card:hover h3 {
      letter-spacing: 1px;
    }

    .feature-card p {
      font-size: 1.1rem;
      line-height: 1.7;
      transition: all 0.3s;
    }

    .feature-card:hover p {
      color: var(--secondary-color);
    }

    /* TIMELINE */
    .timeline {
      position: relative;
      max-width: 1100px;
      margin: 60px auto;
    }

    .timeline::after {
      content: '';
      position: absolute;
      width: 4px;
      background: linear-gradient(to bottom, var(--primary-color), var(--secondary-color));
      top: 0;
      bottom: 0;
      left: 50%;
      margin-left: -2px;
      border-radius: 2px;
    }

    .timeline-item {
      padding: 15px 50px;
      position: relative;
      width: 50%;
      box-sizing: border-box;
    }

    .timeline-item::after {
      content: '';
      position: absolute;
      width: 25px;
      height: 25px;
      background: var(--primary-color);
      border-radius: 50%;
      top: 20px;
      z-index: 1;
      box-shadow: 0 0 0 4px rgba(0, 255, 153, 0.3);
    }

    .left {
      left: 0;
    }

    .right {
      left: 50%;
    }

    .left::after {
      right: -12px;
    }

    .right::after {
      left: -12px;
    }

    .timeline-content {
      padding: 25px;
      background: rgba(26, 26, 26, 0.7);
      border-radius: 15px;
      border: 1px solid var(--secondary-color);
      backdrop-filter: blur(5px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
      transition: all 0.3s;
    }

    .timeline-item:hover .timeline-content {
      transform: translateY(-5px);
      box-shadow: 0 15px 30px rgba(0, 204, 255, 0.3);
      border-color: var(--primary-color);
    }

    .timeline-content h3 {
      color: var(--primary-color);
      margin-bottom: 15px;
      font-size: 1.5rem;
      font-family: 'Orbitron', sans-serif;
    }

    .timeline-content p {
      font-size: 1.1rem;
      line-height: 1.7;
    }

    /* TESTIMONIALS */
    .testimonials {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 40px;
      margin: 60px 0;
    }

    .testimonial-card {
      background: rgba(26, 26, 26, 0.7);
      padding: 30px;
      border-radius: 15px;
      border: 1px solid var(--primary-color);
      position: relative;
      backdrop-filter: blur(5px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
      transition: all 0.3s;
    }

    .testimonial-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 20px 40px rgba(0, 255, 153, 0.3);
    }

    .testimonial-card::before {
      content: '"';
      position: absolute;
      top: 15px;
      left: 15px;
      font-size: 5rem;
      color: rgba(0, 255, 153, 0.1);
      font-family: serif;
      line-height: 1;
